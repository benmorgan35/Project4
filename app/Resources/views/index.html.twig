{% extends "::layout.html.twig" %}

{% block title %}
Accueil - {{ parent() }}
{% endblock %}

{% block body %}


<div class="intro">
    {{ include ('::_introduction.html.twig') }}
</div>


<div class="row" id="rangee">
    <div id="colonne" class="col-sm-8">

        <div class="etape">
            <h2>1. Choix du/des billet(s)</h2>
        </div>


        <div class="sousetape">
            <p>Choisissez un jour de visite</p>
        </div>


        {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
        {{ form_errors(form) }}


        <div class="fondblanc">
        <div class="form-group">
        <div class="formulaire">

                {{ form_label(form.dateVisit, "Jour de visite") }}
                {{ form_widget(form.dateVisit, {'attr':{'placeholder':'Sélectionner une date', 'readonly': 'readonly'}}) }}
                {{ form_errors(form.dateVisit) }}
        </div>
        </div>
        </div>


        <div class="sousetape">
            <p>Choisissez un type de billet (journée complète ou demi-journée)</p>

        </div>

        <div class="fondblanc">


        <div class="form-group">
        <div class="formulaire"><p>Si vous souhaitez commander un billet pour le jour-même, seul le billet demi-journée vous est proposé à partir de 14 heures. </p>
            {{ form_label(form.ticketType, "Type de billet") }}
            {{ form_errors(form.ticketType) }}
            {{ form_widget(form.ticketType,{'attr':{'class':'ticketType'}}) }}
        </div>
        </div>
        </div>

        <div class="sousetape">
            <p>Choisissez un nombre de billet(s)</p>

        </div>

        <div class="fondblanc">
            <div class="form-group">
                <div class="formulaire"> <p>Au-delà de 10 billets, Merci de contacter le musée.</p>
            {{ form_label(form.ticketsNumber, "Nombre de billet(s)") }}
            {{ form_widget(form.ticketsNumber) }}
            {{ form_errors(form.ticketsNumber) }}
        </div>
        </div>
        </div>


        <div class="sousetape">
            <p>
                Vos billets vous seront adressés par mail. <br />Veuillez indiquer une adresse mail valide. </p>

        </div>

        <div class="fondblanc">
            <div class="form-group">
                <div class="formulaire">
                    {{ form_label(form.email, "Adresse email") }}
                    {{ form_widget(form.email, {'attr':{'placeholder':'you@exemple.com'}}) }}
                    {{ form_errors(form.email) }}

                </div>
           </div>
        </div>

        <div class="fondblanc">
            <div class="form-group">
                <div class="formulaire">
                    <input type="reset" value="Annuler" class="btn btn-primary pull-left"/>
                    <input type="submit" value="Poursuivre" class="btn btn-primary pull-right"/>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    </div>
    <div id="colonne" class="col-sm-4">
        {{ include ('::_information.html.twig') }}
    </div>


</div>

{% endblock %}
