{% extends "::layout.html.twig" %}

{% block title %}
    Validation - {{ parent() }}
{% endblock %}

{% block body %}



    <div class="enteteerreur"></div>
    {# I. début row 1------------------------------------------------------------------------- #}
    <div class="row" id="rangee">

        {# I.1 début col row page 1/2................................................................. #}
        <div id="colonne" class="col-sm-12">

            <div class="etape">
                <h2>Validation de votre commmande</h2>

            </div>

            <div class="fondnoir">

                <div class="erreur">
                    <p id="felicitations">Félicitations ! Votre commande est validée.</p>
                    <p>Vous recevrez prochainement votre/vos billet(s) à l'adresse mail :</p>
                    <p id="adressemail">  {{ commande.email }}.</p>
                    <hr />
                    <p>
                        Veuillez noter la référence de votre commande.<br />
                        En cas de problème de réception de mail, contactez-nous au 00/00/00/00/00, muni de cette référence.
                    </p>
                    <div class="achat">

                        <h3 id="detail">Détail de votre achat</h3>
                        <p>Date de votre achat : {{ commande.date|date('d/m/Y') }}</p>
                    <p>Référence de votre commande : {{ commande.code }}</p>
                    <p>Montant de votre commande : {{ commande.total }} euros</p>
                    <p>Date de votre visite : {{ commande.dateVisit|date('d/m/Y') }}</p>
                    <p>Type de billet :
                        {% if commande.ticketType %}
                            Journée complète
                        {% else %}
                            Demi-journée
                        {% endif %}
                    </p>
                        <p>Nombre de billet(s) : {{ commande.ticketsNumber }}</p>
                    <p>Bénéficiaire(s) : <br />

                        {% for ticket in commande.tickets %}
                        <hr />
                         <p id="titreTicket">Ticket {{ loop.index }}</p>
                       <p>{{ ticket.firstName }},
                        {{ ticket.lastName }}<br />
                        Tarif  {{ ticket.tarif }} ({{ ticket.price }} euros)<br />
                        {% endfor %}

                    </p>
                    </div>
                   <hr />

                    <a class="btn btn-primary" href="{{ path('homepage') }}" role="button" id="boutonvalidation">Retour à la page d'accueil</a>

                </div>

            </div>
        </div>

    </div>





{% endblock %}
